{
  "name": "course-docs-vue",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "docsify start . -c ssr.config.js",
    "deploy": "now -p",
    "push": "git add -A && git commit -m \":cn:\" && git push && git push origin master:gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:huoqishi/vuejs-docs.git"
  },
  "author": "huoqishi",
  "license": "MIT",
  "dependencies": {
    "docsify-cli": "^4.2.0"
  },
  "now": {
    "alias": "docsify",
    "env": {
      "NODE_ENV": "production",
      "DEBUG": "docsify"
    }
  },
  "docsify": {
    "config": {
      "basePath": "./docs/",
      "loadSidebar": true,
      "loadNavbar": true
    }
  }
}
